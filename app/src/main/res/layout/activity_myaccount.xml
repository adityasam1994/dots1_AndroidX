<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dotsbackground5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnback"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="My Account"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/whitecircle"
                        android:padding="3dp"
                        app:srcCompat="@drawable/settingicon" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilepic"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_camera"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="5dp" />

                    <ImageView
                        android:id="@+id/btnplus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|right|center_vertical|center_horizontal|center"
                        android:src="@drawable/iconfinder_plus" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/commentborder"
                    android:backgroundTint="#000000"
                    android:padding="3dp"
                    android:text="Status" />

                <EditText
                    android:id="@+id/etfname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#000000"
                    android:drawableLeft="@drawable/ic_account_circle_real_black_24dp"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#787878" />

                <EditText
                    android:id="@+id/etlname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#000000"
                    android:drawableLeft="@drawable/ic_account_circle_real_black_24dp"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#787878" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnchangeadd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:background="@color/zxing_transparent"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/etaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="#000000"
                            android:drawableLeft="@drawable/ic_home_black_24dp"
                            android:drawablePadding="8dp"
                            android:ems="10"
                            android:hint="Home Address"
                            android:inputType="none"
                            android:paddingLeft="8dp"
                            android:textColor="#000000" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/getloc"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/iconfinder_marker" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnchangeadd_work"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:background="@color/zxing_transparent"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/etaddress_work"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="#000000"
                            android:drawableLeft="@drawable/ic_work_black_24dp"
                            android:drawablePadding="8dp"
                            android:ems="10"
                            android:hint="Work Address"
                            android:inputType="none"
                            android:paddingLeft="8dp"
                            android:textColor="#000000" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/getloc_work"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/iconfinder_marker" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/code_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        app:ccp_areaCodeDetectedCountry="true"
                        app:ccp_contentColor="#000000"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="14dp" />

                    <EditText
                        android:id="@+id/etphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etpass2"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="#000000"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="20dp"
                        android:ems="10"
                        android:hint=" Phone Number"
                        android:inputType="phone"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </LinearLayout>

                <Button
                    android:id="@+id/saveaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_button"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:text="Save"
                    android:textColor="#ed7735"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
